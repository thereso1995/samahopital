{% extends 'base.html.twig' %}



{% block title %}Ajouter Medecin{% endblock %}

{% block body %}
<div class="container-fluid px-5 my-5">
    <div class="row">
        <div class="col-sm-6">
            <div class="p-3 bg-white">
                <h1 class="mb-4">Ajouter un Medecin</h1>
                {{form_start(form,{'action':path('medecinshow')})}}
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" value="{{matricule}}" disabled=true>  
                </div>
                <div class="form-group">
                    {{form_row(form.prenom,{'attr':{'class': 'form-control form-control-sm'}})}}

                </div>
                <div class="form-group">
                        {{form_row(form.nom,{'attr':{'class': 'form-control form-control-sm'}})}}
    
                    </div>
                    <div class="form-group">
                            {{form_row(form.datenaiss,{'attr':{'class': 'form-control form-control-sm'}})}}
        
                        </div>
                        <div class="form-group">
                                {{form_row(form.tel,{'attr':{'class': 'form-control form-control-sm'}})}}
            
                            </div>
                            <div class="form-group">
                                    {{form_row(form.email,{'attr':{'class': 'form-control form-control-sm'}})}}
                
                                </div>
                                <div class="form-group">
                                        {{form_row(form.service,{'attr':{'class': 'form-control '}})}}
                    
                                    </div>
                                    <div class="form-group">
                                        <label for="">Specialites</label>
                                            {{form_widget(form.specialite,{'attr':{'class': 'custom-select mr-sm-2 '}})}}
                        
                                        </div>
                                        <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Enregistrer</button>

                                        </div>


            </div>

        </div>
         
    </div>

</div>




{% endblock %}